<%- include('../includes/head.ejs') %>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <div class="container">
                <h1 class="">Our Agencies</h1>

                <% if (agencies.length> 0) { %>

                    <div class="row">

                        <table class="table table-bordered table-dark border-success"
                            style="border-radius: 10px; overflow: hidden;">
                            <thead>
                                <tr>
                                    <th scope="col">id_agentie</th>
                                    <th scope="col">Agentie</th>
                                    <th scope="col">Email</th>
                                </tr>
                            </thead>
                            <% for (let agency of agencies) { %>
                                <tbody>
                                    <tr>
                                        <th scope="row">
                                            <%= agency.id_agentie %>
                                        </th>
                                        <td>
                                            <%= agency.nume %>
                                        </td>
                                        <td>
                                            <%= agency.email %>
                                        </td>
                                    </tr>
                                </tbody>
                                <% } %>
                        </table>
                    </div>


                    <% } else { %>

                        <h1>We don't have agencies at this moment!</h1>

                        <% } %>

            </div>


            <%- include('../includes/end.ejs') %>